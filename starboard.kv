#:kivy 2.1.0

<BackgroundColor@Widget>
    background_color: 1, 1, 1, 1
    canvas.before:
        Color:
            rgba: root.background_color
        Rectangle:
            size: self.size
            pos: self.pos

<StarboardInterface>:
    background_color: 0.263, 0.263, 0.263, 1
    canvas.before:
        Color:
            rgba: root.background_color
        Rectangle:
            size: self.size
            pos: self.pos
    
    Label:
        x: 256 + 21
        y: root.height - 56
        size: root.width - 256 - 21, 56

        halign: "left"
        valign: "middle"
        text_size: self.size
        max_lines: 1

        bold: "true"
        font_size: "14pt"

        text: "Note Title"

    TextInput:
        x: 256 + 21
        size: root.width - 256 - 21 - 21, root.height - 56
        padding: 0, 0, 0, 0
        text: ""
        
        background_color: 0, 0, 0, 0
        foreground_color: 1, 1, 1, 1

    TextInput:
        x: 44
        y: root.height - 56
        width: 150
        height: 56
        hint_text: "Search..."
        hint_text_color: 0.718, 0.718, 0.718, 1
        multiline: "false"
        
        background_color: 0, 0, 0, 0
        foreground_color: 1, 1, 1, 1

        halign: "left"
        valign: "center"
        text_size: self.size
