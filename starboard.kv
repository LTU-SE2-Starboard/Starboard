#:kivy 2.1.0
#:import win kivy.core.window

<BackgroundColor@Widget>
    background_color: 1, 1, 1, 1
    canvas.before:
        Color:
            rgba: root.background_color
        Rectangle:
            size: self.size
            pos: self.pos

<NoteWidget>:

    pos: 256 + 21, 0
    size: win.Window.width - 256 - 21 - 21, win.Window.height - 56
    
    TextInput:

        padding:          0, 0, 0, 0
        background_color: 0, 0, 0, 0
        foreground_color: 1, 1, 1, 1
        hint_text_color:  0.718, 0.718, 0.718, 1
        selection_color:  0.643, 0.761, 95.7, 0.2
        cursor_color:     1, 1, 1, 0.5
        cursor_width:     2
            
        pos: root.pos
        size: root.size

        id: input
        text: root.text

Widget:
    canvas.before:
        Color:
            rgba: 0.263, 0.263, 0.263, 1
        Rectangle:
            size: self.size
            pos: self.pos

    Widget:
        canvas.before:
            Color:
                rgba: 0.125, 0.125, 0.125, 1
            Rectangle:
                size: 256, root.height
                pos: 0, 0
    
    Label:
        # canvas.before:
            # Color:
                # rgb: 1, 1, 1
            # Rectangle:
                # source: "shadow.png"
                # size: root.width - 256, 16
                # pos: 256, root.height - 72
    
        x: 256 + 21
        y: root.height - 56
        size: root.width - 256 - 21, 56

        halign: "left"
        valign: "middle"
        text_size: self.size
        max_lines: 1

        bold: "true"
        font_size: "14pt"

        text: "Note Title"

    ScrollView:
        do_scroll_x: False
        do_scroll_y: True
            
        bar_color: 1, 1, 1, 1
        
        size: 256, root.height - 56

    TextInput:
        canvas.before:
            Color:
                rgb: 1, 1, 1
            Rectangle:
                source: "search.png"
                size: 16, 16
                pos: 20, root.height - 36
        
        padding:          0, 0, 0, 0
        background_color: 0, 0, 0, 0
        foreground_color: 1, 1, 1, 1
        hint_text_color:  0.718, 0.718, 0.718, 1
        selection_color:  0.643, 0.761, 95.7, 0.2
        cursor_color:     1, 1, 1, 0.5
        cursor_width:     2
        
        x: 44
        y: root.height - 75
        width: 150
        height: 56
        hint_text: "Search..."
        multiline: "False"
